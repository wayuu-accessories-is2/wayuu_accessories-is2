
<div class="modal-open" align="center">
  <div class="card card-container">

    <h1 class="modal-title" align="center">Sign in</h1>
    <img id="profile_img" class="profile-img-card" src="<%= asset_path("profileimg.jpg") %>">
    <!--<p id="profile_name" class="profile-name-card"></p>-->
    <form class="form-signin">


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    </br>
    <div align="center" >
     <% f.label :email %>
     <%= f.email_field :email, :id=>"inputEmail", :class=>"form-control", :placeholder=>"Username or email", autofocus: true, autocomplete: "off" %>
    </div>

    <div align="center">
      <% f.label :password %>
      <%= f.password_field :password, :id=>"inputPassword", :class=>"form-control", :placeholder=>"Password", :align=>"center", autofocus: true, autocomplete: "off" %>
    </div>

  </br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :id=>"remember_me", autofocus: true, autocomplete: "off" %>
    </div>
  <% end %>
  </br>
  <div class="actions">
    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
    <% f.submit "Log in" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
