<div align="center">
	<div class="card card-container">
		<h1 class="modal-title" align="center">Sign in</h1></br>
		<img id="profile_img" class="profile-img-card" src="<%= asset_path("profileimg.jpg") %>">
		<p id="profile_name" class="profile-name-card"></p>
		<div class="form-signin">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			<%= current_user%>
			<% f.label :email %>
			<%= f.email_field :email, :id=>"inputEmail", :class=>"form-control", :placeholder=>"Email", autofocus: true, autocomplete: "off" %>

			<% f.label :password %>
			<%= f.password_field :password, :id=>"inputPassword", :class=>"form-control", :placeholder=>"Password", :align=>"center", autofocus: true, autocomplete: "off" %>

			<% if devise_mapping.rememberable? %>
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me, :id=>"remember_me", autofocus: true, autocomplete: "off" %>
			<% end %>
		</br>



		<div class="row">
			<div align="center">
				<div class="actions">
					<button align="center" class="btn btn-signup" type="submit">Sign in</button>
					<% f.submit "Log in" %>
				</div>
			</div>
		</div>
	</div>


	<div class="fontlinks">
		<%= render "devise/shared/links" %>
	</div>
  </br>
		<% if controller_name != 'confirmations' or controller_name != 'passwords' or controller_name != 'unlocks' %>
		<div align="center">
		<div class="row" align="center">
				<div class="cuadro3" align="center">
					<!--<i class="fa fa-facebook-official" aria-hidden="true" align="center" style="color:white"></i>-->
					<%= link_to "Facebook", omniauth_authorize_path(resource_name, :facebook), :class=>"button"%>
				</div>
				<div class="cuadro4"  align="center">
					<!--<i class="fa fa-google-plus" style="color:white" ></i>-->
					<div style="color:white">
					<%= link_to "Google", omniauth_authorize_path(resource_name, :google_oauth2), :class=>"button" %>
					</div>
				</div>
			</div>
		</div>
		<% end %>
	<% end %>
</div>
