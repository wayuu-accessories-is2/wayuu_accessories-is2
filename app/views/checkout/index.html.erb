
<div id="heading-breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1>Checkout</h1>
                    </div>
                    <div class="col-md-5">
                        <ul class="breadcrumb">
                            <li><a href="<%= root_path %>">Home</a>
                            </li>
                            <li>Checkout</li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>

        <div id="content">
          <div class="container">

             <div class="row">

                 <div class="col-md-9 clearfix" id="checkout">

                     <div class="box">

                             <ul class="nav nav-pills nav-justified">
                                 <li class="active"><a href="#"><i class="fa fa-eye"></i><br>Order Review</a>
                                 </li>
                                 <li class="disabled"><a><i class="fa fa-map-marker"></i><br>Address</a>
                                 </li>
                                 <li class="disabled"><a><i class="fa fa-money"></i><br>Payment Method</a>
                                 </li>
                             </ul>

                             <div class="content">
                                 <div class="table-responsive">
                                     <table class="table">
                                         <thead>
                                             <tr>
                                                  <th>Product</th>
                                                  <th>Image</th>
                                                 <th>Name</th>
                                                 <th>Quantity</th>
                                                 <th>Unit price</th>
                                                 <th>Discount</th>
                                                 <th>Total</th>
                                                 <th>Action</th>
                                             </tr>
                                         </thead>
                                         <tbody>
                                           <% @productcart.each do |i| %>
                                             <tr>
                                                 <td>
                                                   <% showImage = ProductImage.find_by(product_id: i.id.to_s ) %>
                                                   <% unless showImage.nil?%>
                                                     <td><%=image_tag showImage.image.thumb.url%></td>
                                                   <%else%>
                                                     <td>No image</td>
                                                   <%end%>
                                                 </td>
                                                 <td><a href="<%= product_path(i.id) %>"><%= i.name %></a>
                                                 </td>
                                                 <td><%= i.quantity %></td>
                                                 <td><%= i.price %></td>
                                                 <td><%= i.discount %></td>

                                                 <td>$<%= i.price * i.quantity %></td>
                                                 <td> <button data-toggle="tooltip" title="Save" id="addproduct" class="btn"><i class="fa fa-trash"></i></button> </td>
                                             </tr>
                                          <% end %>
                                         </tbody>
                                         <tfoot>
                                             <tr>
                                                 <th colspan="6">Total</th>
                                                 <th>$446.00</th>
                                             </tr>
                                         </tfoot>
                                     </table>

                                 </div>
                                 <!-- /.table-responsive -->
                             </div>
                             <!-- /.content -->

                             <div class="box-footer">
                                 <div class="pull-left">
                                     <a href="<%= cart_checkout_index_path %>" class="btn btn-default"><i class="fa fa-chevron-left"></i>Cart</a>
                                 </div>
                                 <div class="pull-right">
                                     <button type="submit" id="index" class="btn btn-template-main">Address<i class="fa fa-chevron-right"></i>
                                     </button>
                                 </div>
                             </div>

                     </div>
                     <!-- /.box -->


                 </div>
                 <!-- /.col-md-9 -->

                 <div class="col-md-3">

                     <div class="box" id="order-summary">
                         <div class="box-header">
                             <h3>Order summary</h3>
                         </div>
                         <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>

                         <div class="table-responsive">
                             <table class="table">
                                 <tbody>
                                     <tr>
                                         <td>Order subtotal</td>
                                         <th>$446.00</th>
                                     </tr>
                                     <tr>
                                         <td>Shipping and handling</td>
                                         <th>$10.00</th>
                                     </tr>
                                     <tr>
                                         <td>Tax</td>
                                         <th>$0.00</th>
                                     </tr>
                                     <tr class="total">
                                         <td>Total</td>
                                         <th>$456.00</th>
                                     </tr>
                                 </tbody>
                             </table>
                         </div>

                     </div>

                 </div>
                 <!-- /.col-md-3 -->

             </div>
             <!-- /.row -->

         </div>

        </div>
        <!-- /#content -->
