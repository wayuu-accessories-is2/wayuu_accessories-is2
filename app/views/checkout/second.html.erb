<div class="box">


        <div class="wrapper">
          <div class="checkout container">
            <div class="content">

              <div class="row">

                <div class="row body">
                  <div class="col-xs-3 left-side"></div>
                  <div class="col-xs-6 right-side">
                    <header>
                      <h1>Payment</h1>
                      <p>
                        Make a process payment with Braintree using PayPal or a card
                      </p>
                    </header>

                    <%= form_tag("/checkouts", method: "post", id: "payment-form") do %>
                      <section>
                        <div class="bt-drop-in-wrapper">
                          <div id="bt-dropin"></div>
                        </div>
                        <br>
                        <label for="amount">
                          <span class="input-label" style="font-size: 20px;">Amount</span>
                          <div class="input-wrapper amount-wrapper">
                            <input id="amount" name="amount" type="tel" min="1" placeholder="Amount" value="<%= @valor %>" class="hidden">
                            <h3><%=  @valor %></h3>
                          </div>
                        </label>
                      </section>
                      <div align="right">
                        <button class="btn btn-primary" type="submit"><span>Transaction</span></button>
                      </div>
                    <% end %>
                  </div>
                </div>
                <div class="col-xs-3 left-side"></div>

            </div>
          </div>
        </div>
          <div class="col-sm-4">
        <script src="https://js.braintreegateway.com/js/braintree-2.27.0.min.js"></script>
        <script>
          (function () {
            var checkout = new Demo({
              formID: 'payment-form'
            });

            var client_token = "<%= @client_token %>";
            braintree.setup(client_token, "dropin", {
              container: "bt-dropin"
            });
          })()
        </script>
        <!-- /.content -->
      </div>
      </div>
        <div class="box-footer">
            <div class="pull-left">
                <button type="submit" id="index" class="btn btn-template-main"><i class="fa fa-chevron-left"></i>Address
                </button>
            </div>
            <div class="pull-right">
                <button type="submit" class="btn btn-template-main">Finish<i class="fa fa-chevron-right"></i>
                </button>
            </div>
        </div>

</div>
<!-- /.box -->
