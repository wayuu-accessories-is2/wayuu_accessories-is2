

 <div id="page-wrapper" style="background-color: #FFFFFF; margin-top: 15px">

<div class="container-fluid">

    <div class="pull-right">
      <a href="/admin/index" data-toggle="tooltip" title="Cancel" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>Latest sales</h1>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>Sales</h3>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="tab-pane" id="tab-discount">
          <div class="table-responsive">
            <table id="discount" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <td class="text-left">ID</td>
                  <td class="text-left">Created at</td>
                  <td class="text-left">Braintree ID</td>
                  <td class="text-left">Amount</td>
                  <td class="text-left">Status</td>
                  <td class="text-left">Action</td>

                </tr>
              </thead>
              <tbody>
                  <%   @orderstransaction.each do |t| %>
                <tr>

                      <td><%= t.order_id %></td>
                      <td><%= time_ago_in_words( t.created_at ) + " ago" %></td>
                      <td><%= t.braintreeid %></td>
                      <td><%= t.amount %></td>
                      <td><%= OrderStatus.find( Order.find( t.order_id ).order_status_id ).name %></td>

                  <td>
                   <%= link_to '', details_sale_index_path( :id => t.order_id ), :class=>"btn btn-default fa fa-search", remote: true %>

                  <!-- <a href="/category/status/<%= t.id %>" data-toggle="tooltip" title="Active / Disable" class="btn btn-default"><i class="fa fa-eye"></i></a></td>
                  <a href="/admin/index" data-toggle="tooltip" title="Active / Disable" class="btn btn-default"><i class="fa fa-eye"></i></a></div></td> -->
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>
