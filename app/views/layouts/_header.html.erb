 				<!--<img id="profile_img2" class="profile-img2-card" src="<%= asset_path("profileimg.jpg") %>">-->
 				<div class="form-signin">
 					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

 						<% f.label :email %>
 						<%= f.email_field :email, :id=>"inputEmail", :class=>"form-control", :placeholder=>"Email", autofocus: true, autocomplete: "off" %>

 						<% f.label :password %>
 						<%= f.password_field :password, :id=>"inputPassword", :class=>"form-control", :placeholder=>"Password", :align=>"center", autofocus: true, autocomplete: "off" %>

 						<div class="fonts">
 						<% if devise_mapping.rememberable? %>
 							<%= f.check_box :remember_me %>
 							<%= f.label :remember_me, :id=>"remember_me", autofocus: true, autocomplete: "off" %>
 						<% end %>
 					</div>

 			<div class="row">
 				<div align="center">
 					<div class="form-group">
						  <button class="btn btn-signin"></i> Log in</button>
 							<!--<button align="center" class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>-->
 							<% f.submit "Log in" %>
 					</div>
 				</div>
 			</div>
 	   </div>

