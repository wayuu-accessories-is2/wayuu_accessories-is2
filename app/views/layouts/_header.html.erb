<!-- *** LOGIN MODAL *** -->
<div class="modal fade" id="myModal4" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div align="center">
				<div class="card card-container1" align="center">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&times;</button>
						<div class="modal-title1" style="font-size:38px " align="center">
							Log in
						</div>
					</div>
				</br>
					<% if controller_name != 'confirmations' or controller_name != 'passwords' or controller_name != 'unlocks' %>
					<div align="center">
					<div class="row" align="center">
					    <div class="cuadro3" align="center">
					      <!--<i class="fa fa-facebook-official" aria-hidden="true" align="center" style="color:white"></i>-->
					      <%= link_to "Facebook", omniauth_authorize_path(resource_name, :facebook), :class=>"button"%>
					    </div>
					    <div class="cuadro4"  align="center">
					      <!--<i class="fa fa-google-plus" style="color:white" ></i>-->
					      <%= link_to "Google", omniauth_authorize_path(resource_name, :google_oauth2), :class=>"button" %>
					    </div>
					  </div>
					</div>
					<% end %>
					<div class="modal-body">
						<!--<img id="profile_img2" class="profile-img2-card" src="<%= asset_path("profileimg.jpg") %>">-->
						<div class="form-signin">
							<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

							<% f.label :email %>
							<%= f.email_field :email, :id=>"inputEmail", :class=>"form-control", :placeholder=>"Email", autofocus: true, autocomplete: "off" %>

							<% f.label :password %>
							<%= f.password_field :password, :id=>"inputPassword", :class=>"form-control", :placeholder=>"Password", :align=>"center", autofocus: true, autocomplete: "off" %>

							<div class="fonts">
								<% if devise_mapping.rememberable? %>
								<%= f.check_box :remember_me %>
								<%= f.label :remember_me, :id=>"remember_me", autofocus: true, autocomplete: "off" %>
								<% end %>
							</div>
							<div class="row">
								<div align="center">
									<div class="form-group">
										<button class="btn btn-signin"></i> Log in</button>
										<!--<button align="center" class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>-->
										<% f.submit "Log in" %>
									</div>
								</div>
							</div>
						</div>
						<p class="text-center text-muted">Not registered yet? <a href="<%= new_user_registration_path %>"><strong>Register now</strong></a>! It is easy and done in 1&nbsp;minute and gives you access to special discounts and much more!</p>
						<div class="fontlinks">
							<%= render "devise/shared/links" %>
						</div>
						<% end %>
					</div>
					<!--<p class="text-center">
