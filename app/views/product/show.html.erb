
<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1><%= @product.name %></h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li><a><%= Category.find( (((CategoryHasProduct.find_by( product_id: @product.id.to_s  )).category_id).to_s) ).name %></a>
                    </li>
                    <li><%= @product.name %></li>
                </ul>

            </div>
        </div>
    </div>
</div>


