                        </div>

                        <div class="ribbon sale">
                          <div class="theribbon">SALE</div>
                          <div class="ribbon-background"></div>
                        </div>
                                <!-- /.ribbon -->
                        <% if @product.created_at > 3.days.ago %>

                        <div class="ribbon new">
                          <div class="theribbon">NEW</div>
                          <div class="ribbon-background"></div>
                        </div>
                        <% end %>
                    </div>
                    <div class="col-sm-6">
                        <div class="box">

                          <div class="stock" align="center">
                            <% if @product.quantity > 0 %>
                              <h3>Available</h3>
                            <% else %>
                              <h3>Not available</h3>
                            <% end %>
                          </div>

                            <form>


                                <p class="price">$<%= @product.price %></p>

                                <p class="text-center">
                                  <% if @product.quantity > 0 %>
                                    <button type="submit" class="btn btn-template-main"><i class="fa fa-shopping-cart"></i> Add to cart </button>
                                  <% else %>
                                    <button type="submit" class="btn btn-template-main" disabled><i class="fa fa-shopping-cart"></i> Add to cart </button>
                                  <% end %>

                                    <button type="submit" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Add to wishlist"><i class="fa fa-heart-o"></i>
                                    </button>
                                </p>

                            </form>
                        </div>

                        <div class="row" id="thumbs">
                            <div class="col-xs-4">
                                <a href="https://wayuu-mochila-bags.com/wp-content/uploads/2016/08/Authentic-WAYUU-Large-Mochila-Bag-100_-Colombian-Boho-Hobo-Finest-Handmade-412-2.jpg" class="thumb">
