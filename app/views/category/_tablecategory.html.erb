<div class="tab-pane" id="table-category">
  <div class="table-responsive">
    <table id="discount" class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <td class="text-left">Name</td>
          <td class="text-left">Number of products</td>
          <td class="text-left">Status</td>
          <td class="text-left">Action</td>
        </tr>
      </thead>
      <tbody>
        <% @list.each do |t| %>
        <tr>
          <td><%= t.name %></td>
          <td><%= category_stock(t.id) %></td>
          <% if t.status == 1 %>
            <td>Active</td>
          <% else %>
            <td>Idle</td>
          <% end %>
          <td><!-- <a href="/category/edit/<%= t.id %>" data-toggle="tooltip" title="Edit" class="btn btn-default"><i class="fa fa-pencil"></i></a>-->
          <%= link_to '', edit_category_path( :id => t.id ), :class=>"btn btn-default fa fa-pencil", remote: true %>

          <%= link_to '', status_category_index_path( :id => t.id ), :class=>"btn btn-default fa fa-eye", remote: true %>
          <!-- <a href="/category/status/<%= t.id %>" data-toggle="tooltip" title="Active / Disable" class="btn btn-default"><i class="fa fa-eye"></i></a></td>
          <a href="/admin/index" data-toggle="tooltip" title="Active / Disable" class="btn btn-default"><i class="fa fa-eye"></i></a></div></td> -->
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="center">
    <%= will_paginate @list, renderer: BootstrapPagination::Rails, inner_window: 1, outer_window: 1,previous_label: "«" , next_label: "»" %>
  <!-- <%= will_paginate @list, :params => { :controller => "category", :action => "list" } %> -->
  </div>
</div>
