
<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1>Categories </h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb">
                    <li><%= link_to "HOME", root_path%>
                    </li>
                    <li>Categories</li>
                </ul>

            </div>
        </div>
    </div>
</div>

<div id="content">
    <div class="container">
        <div class="row products">
          <% @show_category.each do |c|%>
            <div class="col-md-3 col-sm-4">
                <div class="product">
                    <div class="image">
                        <a href="shop-detail.html">
                            <img src="https://wayuu-mochila-bags.com/wp-content/uploads/2016/08/Authentic-WAYUU-Large-Mochila-Bag-100_-Colombian-Boho-Hobo-Finest-Handmade-432-1-300x300.jpg" alt="" class="img-responsive image1">
                        </a>
                    </div>
                    <!-- /.image -->
                    <div class="text">
                        <h3><%=c.name%></h3>
                        <p class="price">In stock:  <%=  @count_products.where("category_id = " + c.id.to_s ).size  %></p>
                        <p class="buttons">
                            <a href="shop-detail.html" class="btn btn-default">View detail</a>
                            <a href="shop-basket.html" class="btn btn-template-main"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                        </p>
                    </div>
                    <!-- /.text -->
                    <%cate_dis = @count_products.where("category_id = " + c.id.to_s ) %>
                    <%p = 0%>
                    <%cate_dis.each do |d|%>
                      <%if Product.find(d.product_id.to_s).discount != 0.0%>
                        <%p+=1%>
                      <%end%>
                    <%end%>

                    <%if p != 0%>
                    <div class="ribbon sale">
                      <div class="theribbon">SALE</div>
                      <div class="ribbon-background"></div>
                    </div>
                    <%end%>
                    <!-- /.ribbon -->

                    <% if c.created_at > 10.days.ago %>
                    <div class="ribbon new">
                      <div class="theribbon">NEW</div>
                      <div class="ribbon-background"></div>
                    </div>
                    <% end %>
                    <!-- /.ribbon -->
                </div>
                <!-- /.product -->
            </div>
          <%end%>
        <div class="col-sm-12">
          <%= will_paginate @show_category, renderer: BootstrapPagination::Rails, class: 'pagination pagination-centered'%>
        </div>
        <!-- /.col-sm-12 -->
    </div>
    <!-- /.container -->
</div>
    <!-- /#content -->
