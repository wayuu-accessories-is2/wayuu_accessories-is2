<div class="container">
                <div class="row">
                  <div class="col-md-9" id="blog-listing-medium">
                    <% @articles.each do |article|%>
                    <section class="post">
                      <div class="row">
                        <div class="col-md-4">
                          <div class="image" style="height: 197px;">
                            <a href="#">
                              <%=image_tag( "Blog/#{article.img_reference}", class:"img-responsive", alt:"Example blog post alt" )%>
                            </a>
                          </div>
                        </div>
                        <div class="col-md-8">
                          <h2><a href="#"><%= article.title %></a></h2>
                          <div class="clearfix">
                            <p class="author-category">By <a href="#">John Snow</a> in <a href="#">Wayuu Mochila Bags' Company Info Leave a comment</a>
                            </p>
                            <p class="date-comments">
                              <a href="#"><i class="fa fa-calendar-o"></i><% t=article.created_at %><%= t.strftime("%b %d, %Y") %></a>
                              <a href="#"><i class="fa fa-comment-o"></i> 8 Comments</a>
                            </p>
                          </div>
                          <p class="intro"><%= article.description %></p>
                          <p class="read-more"><%= link_to "Continue reading", "blog/#{article.id}",class:"btn btn-template-main" %></p>
                        </div>
                      </div>
                    </section>
                    <% end %>
                  </div>
                </div>
            </div>
