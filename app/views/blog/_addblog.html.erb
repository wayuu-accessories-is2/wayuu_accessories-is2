
 <div id="page-wrapper" style="background-color: #FFFFFF; margin-top: 15px">

<div class="container-fluid">

    <div class="pull-right">
      <button data-toggle="tooltip" title="Save" id="addproduct" class="btn btn-primary"><i class="fa fa-save"></i></button>
      <button title="Saveimage" id="saveimage" class="btn btn-primary hidden"><i class="fa fa-save"></i></button>
      <a href="/admin/index" id="finishadd" title="Finish" class="btn btn-primary hidden"><i class="fa fa-check"></i></a>
      <a href="/admin/index" data-toggle="tooltip" title="Cancel" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>Blog</h1>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>Add a new post</h3>
      </div>
      <div class="panel-body" style="margin-top: 20px">
        <form action="/product/new" method="post" enctype="multipart/form-data" id="form-product" class="form-horizontal">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <ul class="nav nav-tabs">
            <li class="active" id="general"><a href="#tab-data" data-toggle="tab">General</a></li>
            <li id="idImage" class="hidden"><a href="#tab-image" data-toggle="tab">Images</a></li>
          </ul>

          <div class="tab-content" style="margin-top: 15px">
            <div class="tab-pane active" id="tab-data">
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-name">Title</label>
                <div class="col-sm-10">
                  <input type="text" name="product_name" value="" placeholder="Post title" id="name" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-description1">Description1</label>
                <div class="col-sm-10">
                  <textarea name="blog_description1" placeholder="Description" style="min-width: 100%" id="description"></textarea>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-description1">Image </label>
                <input type="file" class="filestyle" data-buttonName="btn-primary">
              </div>
              <hr>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-description1">Description2</label>
                <div class="col-sm-10">
                  <textarea name="blog_description2" placeholder="Description" style="min-width: 100%" id="description"></textarea>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-description1">Image </label>
                <input type="file" class="filestyle" data-buttonName="btn-primary">
              </div>
              <hr>


              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-description1">Description3</label>
                <div class="col-sm-10">
                  <textarea name="product_description" placeholder="Description" style="min-width: 100%" id="description"></textarea>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-description1">Image </label>
                <input type="file" class="filestyle" data-buttonName="btn-primary">
              </div>
              <hr>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-description1">Description4</label>
                <div class="col-sm-10">
                  <textarea name="product_description" placeholder="Description" style="min-width: 100%" id="description"></textarea>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-description1">Image </label>
              <input type="file" class="filestyle" data-buttonName="btn-primary">
            </div>
            <hr>
            <div class="tab-pane" id="tab-links">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-category"><span data-toggle="tooltip" title="(Autocomplete)">Categories</span></label>
                <div class="col-sm-8">
                  <!--<input type="text" name="category1" value="" placeholder="Category" id="input-category" class="form-control" /><br>-->
                  <select class="form-control" data-live-search="true" id="category1" name="category1" style="font-size: 15px">
                  </select>
                </div>
              </div>
            </div>
            </form>
            <div class="tab-pane" id="tab-image">
              <div class="modal-body">
                <form method="post" action="/admin/product_images/create" id="image" class="dropzone" enctype="multipart/form-data">
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <div class="fallback">
                    <input name="media" type="file"/>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
    </div>
