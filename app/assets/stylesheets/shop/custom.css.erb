/*TOP HEADER*/

.contact {
	margin-top: 4px;
}
#top .login {
	margin-top: 2px;
}
#top .social a {
	line-height: 24px;
}
#top .social a:hover.tumblr {
	background-color: #36465D;
}
#top .social a:hover.youtube {
	background-color: #E62117;
}
.nav > li > div {
	padding: 10px 15px;
}
/*HEADER*/
.logo-header{
	max-height: 63px;
}
.logo-small-header{
	max-height: 58px;
}
.navbar-brand {
	padding: 2px 15px;
}
#navbar-cart{
	font-size: 20px;
	text-decoration: none;
	padding-top: 19.5px;
	padding-bottom: 19.5px;
}
#cart-container{
	display: block;
	float: right;
	margin: 17.5px;
}
.cart-count {
	display: inline-block;
	background-color: #555555;
	width: 20px;
	height: 20px;
	border-radius: 10px;
	color: #fff;
	font-weight: 300;
	font-size: 12px;
	text-align: center;
	position: relative;
	top: -2px;
	left: -2px;
	line-height: 20px;
}
.navbar .navbar-buttons {
	margin-right: 10px;
}
/*MODAL*/
#login-social{
	text-align: center;
	color: #FFF;
}
#login-facebook {
	width: 90px;
	height: 30px;
	background-color: #3B5998;
	border: none;
	border-radius: 2px;
	margin: 0px 5px;
	font-size: 20px;
}
#login-google {
	width: 90px;
	height: 30px;
	background-color: #EA4335;
	border: none;
	border-radius: 2px;
	margin: 0px 5px;
	font-size: 20px;
}
/*CAROUSEL*/
.margin-auto {
	margin: auto;
}
.custom-row-carousel {
	margin-right: 0px;
	margin-left: 0px;
}
.home-carousel .owl-carousel {
	padding-top: 0px;
	padding-bottom: 0px;
}
.home-carousel .dark-mask {
	background: #202020;
}
.owl-theme .owl-controls {
	margin-top: -28px;
}
.owl-theme .owl-controls .owl-page {
	position: relative;
}
.home-carousel .owl-theme .owl-controls .owl-page span {
	background: #38a7bb;
}
.home-carousel {
	background: url(<%= asset_path 'shop/photogrid.png' %>) center center repeat;
}
/*HOME WAYUU TEXT*/
#moreText {
	display: block;
}
#lessText {
	display: none;
}
#seeLessLink {
	display: none;
}
.bar.background-pentagon {
	background: url(<%= asset_path 'shop_template/texture-bw.png' %>) center center repeat;
}
.bar.background-image-fixed-2 {
  background: url(<%= asset_path 'shop/fixed-background-2.jpg' %>) center top no-repeat;
}
/*SHOP*/
#heading-breadcrumbs {
	background: url(<%= asset_path 'shop_template/texture-bw.png' %>) center center repeat;
}
#sort-by {
	float: right;
}
.custom-box-image {
	margin: 0px;
}
.custom-text-add-to-cart{
	margin-top: 70px;
}
/*FOOTER*/
#footer {
	background: #272727;
	color: #D8D8D8;
}
.mail-footer {
	margin-top: 24.5px;
	margin-bottom: 24.5px;
}
/*COPYRIGHT*/
#copyright {
	background-color: #171717;
	color: #E8E8E8;
}
/*RESPONSIVE*/
@media (max-width: 767px) {
	#top .login {
		float: right;
	}
	#moreText {
		display: none;
	}
	#lessText {
		display: block;
	}
	.mail-footer {
		margin-top: 0px;
		margin-bottom: 0px;
	}
	.top-footer {
		margin-bottom: 50px;
	}
}

.pagination_style{
	margin: 20px 0;
	font-family: "Roboto", Helvetica, Arial, sans-serif;
	border-radius: 0;
}
